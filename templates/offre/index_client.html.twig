{% extends 'client.html.twig' %}

{% block title %}Offre Index
{% endblock %}
{% block stylesheets %}
	{# Include your external stylesheets here #}
	<link
	rel="stylesheet" href="{{ asset('assets/client/css/style.css') }}" type="text/css">
	{# Add any additional stylesheets as needed #}

	<style>
		/* Add custom styles here */
		.speaker-item {
			border: 2px solid #007bff;
			border-radius: 10px;
			padding: 20px;
			margin-bottom: 20px;
		}

		.si-pic {
			text-align: center;
			border: 1px solid #ddd;
			padding: 10px;
		}

		.si-title {
			margin-bottom: 10px;
		}

		.si-title h4 {
			font-size: 1.5em;
		}

		.si-title span {
			font-size: 1.2em;
		}

		.si-text p {
			font-size: 1em;
			line-height: 1.5;
		}

		.btn-primary {
			background-color: #007bff;
			color: #fff;
		}

		.btn-success {
			background-color: #28a745;
			color: #fff;
		}
	</style>
{% endblock %}

{% block body %}
	<section class="speaker-section spad">
		<div class="container">
			<div class="row">
				{% for offre in offres %}
					<div class="col-sm-6">
						<div class="speaker-item">
							<div class="row">
								<div class="col-lg-6">
									<div class="si-pic">
										{% if offre.imageoffre %}
											<img src="{{ asset('uploads/images/' ~ offre.imageoffre) }}" alt="{{ offre.nomoffre }} Image" style="max-width: 200px; max-height: 100px;">
										{% else %}
											No Image Available
										{% endif %}
									</div>
								</div>
								<div class="col-lg-6">
									<div class="si-text">
										<div class="si-title">
											<h4>{{ offre.nomoffre }}</h4>
											<span>{{ offre.typeoffre }}</span>
										</div>
										<p>{{ offre.description }}</p>
										<p>
											<strong>Début:</strong>
											{{ offre.datedebut ? offre.datedebut|date('Y-m-d') : 'N/A' }}
										</p>
										<p>
											<strong>Fin:</strong>
											{{ offre.datefin ? offre.datefin|date('Y-m-d') : 'N/A' }}
										</p>
										<p>
											<strong>Valeur:</strong>
											{{ offre.valeuroffre }}
										</p>
										<p>
											<strong>Status:</strong>
											{{ offre.status }}
										</p>
										<p>
											<a href="{{ path('app_panier_new', {'offreId': offre.idoffre}) }}" class="btn btn-success">Ajouter au panier</a>
										</p>
										<p>
											<a href="{{ path('offre_pdf', {'id': offre.idoffre}) }}" class="btn btn-primary">Télécharger PDF</a>
										</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
			{# Display pagination controls #}
			<div class="pagination">
				{{ knp_pagination_render(pagination) }}
			</div>
			<div class="load-more text-center" style="margin-top: 20px;">
				<a href="#" class="btn btn-primary">Load More</a>
			</div>
		</div>

		<p>
			<a href="{{ path('afficher_pourcentages_offres') }}" class="btn btn-primary">Statistique</a>
		</p>
		<p>
			<a href="{{ path('app_offre_weather', {'city': 'tunisie'}) }}" class="btn btn-primary">Météo</a>
		</p>
	</section>

	<script src="{{ asset('assets/libs/jquery/dist/jquery.min.js') }}"></script>
	<script src="{{ asset('assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
	<script src="{{ asset('assets/client/js/jquery-3.3.1.min.js') }}"></script>
	<script src="{{ asset('assets/client/js/bootstrap.min.js') }}"></script>
	<script src="{{ asset('assets/client/js/jquery.magnific-popup.min.js') }}"></script>
	<script src="{{ asset('assets/client/js/jquery.countdown.min.js') }}"></script>
	<script src="{{ asset('assets/client/js/jquery.slicknav.js') }}"></script>
	<script src="{{ asset('assets/client/js/owl.carousel.min.js') }}"></script>
	<script src="{{ asset('assets/client/js/main.js') }}"></script>
{% endblock %}
