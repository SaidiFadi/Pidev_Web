{% extends 'client.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-header">
                        <h1 class="text-center">Create a new location</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form'}}) }}

                        <div class="form-group">
                           
                            {{ form_row(form.datedebut, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            
                            {{ form_row(form.datefin, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            
                            {{ form_row(form.tarif, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                           
                            {{ form_widget(form.personne, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                           
                            {{ form_widget(form.logement, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a href="{{ path('app_location_index') }}" class="btn btn-secondary">Back to List</a>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
