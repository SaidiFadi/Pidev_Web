{# templates/weather/weather.html.twig #}
{% extends 'client.html.twig' %}

{% block title %}Weather Information for {{ city }}{% endblock %}

{% block styles %}
    {{ parent() }}
    <style>
        /* Ajoutez vos styles ici */
    </style>
{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Weather Information</title>
        <style>
            /* Styles spécifiques à cette page */
            body {
                font-family: Arial, sans-serif;
                margin: 20px;
                text-align: center;
            }

            h1 {
                color: #333;
            }

            p {
                margin: 5px 0;
            }

            ul {
                list-style: none;
                padding: 0;
            }

            li {
                margin: 5px 0;
            }

            .weather-info {
                background-color: #fff;
                border: 1px solid #ddd;
                border-radius: 5px;
                padding: 15px;
                margin: 20px auto;
                max-width: 600px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

            .error-message {
                color: #d9534f;
                font-weight: bold;
            }

            .success-message {
                color: #5bc0de;
                font-weight: bold;
            }
        </style>
    </head>
    <body>
        <h1>Weather Information for {{ city }}</h1>

        {% block content %}
            {% if weatherData %}
                <div class="weather-info">
                    <p>Temperature: {{ weatherData.main.temp }} &deg;C</p>
                    <p>Feels Like: {{ weatherData.main.feels_like }} &deg;C</p>
                    <p>Description: {{ weatherData.weather[0].description }}</p>
                    <p>Humidity: {{ weatherData.main.humidity }}%</p>
                    <p>Pressure: {{ weatherData.main.pressure }} hPa</p>

                    <p>Wind:</p>
                    <ul>
                        <li>Speed: {{ weatherData.wind.speed }} m/s</li>
                        <li>Direction: {{ weatherData.wind.deg }} &deg;</li>
                    </ul>

                    <p>Clouds:</p>
                    <ul>
                        <li>Cloudiness: {{ weatherData.clouds.all }}%</li>
                    </ul>

                    <p>Sunrise: {{ weatherData.sys.sunrise | date('H:i:s') }}</p>
                    <p>Sunset: {{ weatherData.sys.sunset | date('H:i:s') }}</p>

                    <p>Coordinates:</p>
                    <ul>
                        <li>Longitude: {{ weatherData.coord.lon }}</li>
                        <li>Latitude: {{ weatherData.coord.lat }}</li>
                    </ul>
                </div>
            {% else %}
                <p class="error-message">No weather data available for {{ city }}.</p>
            {% endif %}
        {% endblock %}
    </body>
    </html>
{% endblock %}
