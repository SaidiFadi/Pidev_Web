<form method="post" action="{{ path('app_reservation_cancel', {'idevt': evenement.idevt}) }}">
    <input type="hidden" name="_method" value="POST">
    <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ evenement.idevt) }}">
    <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to cancel your participation?')">Cancel participation</button>
</form>