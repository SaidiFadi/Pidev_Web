{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Evenement Details</h1>

        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th class="text-rose">Identifiant</th>
                    <td>{{ evenement.idevt }}</td>
                </tr>
                <tr>
                    <th class="text-rose">Titre</th>
                    <td>{{ evenement.titreevt }}</td>
                </tr>
                <tr>
                    <th class="text-rose">Nom de l'organisateur</th>
                    <td>{{ evenement.nomorg }}</td>
                </tr>
                <tr>
                    <th class="text-rose">Description</th>
                    <td>{{ evenement.descevt }}</td>
                </tr>
                <tr>
                    <th class="text-rose">Heure de d√©but</th>
                    <td>{{ evenement.hdEvt ? evenement.hdEvt|date('H:i:s') : 'N/A' }}</td>
                </tr>
                <tr>
                    <th class="text-rose">Heure de fin</th>
                    <td>{{ evenement.hfEvt ? evenement.hfEvt|date('H:i:s') : 'N/A' }}</td>
                </tr>
                <tr>
                    <th class="text-rose">Adresse</th>
                    <td>{{ evenement.adresseevt }}</td>
                </tr>
                <tr>
                    <th class="text-rose">Type</th>
                    <td>{{ evenement.typeevt }}</td>
                </tr>
                <tr>
                    <th class="text-rose">Date</th>
                    <td>{{ evenement.dateevt ? evenement.dateevt|date('Y-m-d') : 'N/A' }}</td>
                </tr>
                <tr>
                    <th class="text-rose">Vote</th>
                    <td>{{ evenement.vote }}</td>
                </tr>
                <tr>
                    <th class="text-rose">Image</th>
                    <td>
                        {% if evenement.imageevt %}
                            <img src="{{ asset('assets/admin/src/assets/uploads/' ~ evenement.imageevt) }}"
                                alt="{{ evenement.imageevt }} Image"
                                class="img-fluid rounded shadow"
                                style="max-width: 350px; max-height: 200px;">
                        {% else %}
                            <p class="no-content-message">No Image Available</p>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th class="text-rose">Video</th>
                    <td>
                        {% if evenement.videoevt %}
    <div class="video-container">
        <video width="100%" height="auto" controls>
            <source src="{{ asset('assets/admin/src/assets/uploads/' ~ evenement.videoevt) }}" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>
{% else %}
    <p>No Video Available</p>
{% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('app_evenement_indexAdmin') }}" class="btn btn-light">Back to List</a>
            <a href="{{ path('app_evenement_edit', {'idevt': evenement.idevt}) }}" class="btn btn-warning">Edit</a>
            {{ include('evenement/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
