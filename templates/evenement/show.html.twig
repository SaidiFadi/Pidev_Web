{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.idevt }}</td>
            </tr>
            <tr>
                <th>Titre </th>
                <td>{{ evenement.titreevt }}</td>
            </tr>
            <tr>
                <th>Nom de l'organisateur</th>
                <td>{{ evenement.nomorg }}</td>
            </tr>
            <tr>
                <th>Description </th>
                <td>{{ evenement.descevt }}</td>
            </tr>
            <tr>
                <th> Heure de début </th>
                <td>{{ evenement.hdEvt ? evenement.hdEvt|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure de la fin </th>
                <td>{{ evenement.hfEvt ? evenement.hfEvt|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Adresse </th>
                <td>{{ evenement.adresseevt }}</td>
            </tr>
            <tr>
                <th>Type </th>
                <td>{{ evenement.typeevt }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.dateevt ? evenement.dateevt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Vote</th>
                <td>{{ evenement.vote }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_evenement_index') }}"> Retour à l'accueil </a>

    <a href="{{ path('app_evenement_edit', {'idevt': evenement.idevt}) }}"> Modifier </a>

    {{ include('evenement/_delete_form.html.twig') }}
{% endblock %}
