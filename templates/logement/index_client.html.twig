     </div>

    {# Logements Cards #}
    <div class="row mt-3">
        {% if logements is defined and logements|length > 0 %}
            {% for logement in logements %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ asset('uploads/' ~ logement.image) }}" class="card-img-top img-fluid" alt="Logement Image" style="height: 300px;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ logement.adrl }}</h5>
                            <p class="card-text">Superficie: {{ logement.superfice }}</p>
                            <p class="card-text">Loyer: {{ logement.loyer }}</p>
                            <p class="card-text">Type: {{ logement.type }}</p>
                            <p class="card-text">RÃ©gion: {{ logement.region }}</p>
                            <a href="{{ path('app_logement_client_show', {'idlogement': logement.idlogement}) }}" class="btn btn-primary mt-auto">Show</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12">
                <p>No records found</p>
            </div>
        {% endif %}
    </div>
     {# Include jQuery library #}
    <script src="{{ asset('assets/admin/src/assets/libs/jquery/dist/jquery.min.js') }}"></script>
    <script>
    $(document).ready(function () {
        // Function to handle form submission via AJAX
        function submitForm() {
            // Get the form data
            var formData = $('#search-form form').serialize();

            // Make an AJAX request
            $.ajax({
                type: 'GET',
                url: '{{ path('app_logement_client_index') }}',
                data: formData,
                dataType: 'json', // Specify that the expected response is JSON
                success: function (response) {
                    // Update logements in the template
                    console.log(response.logements); // Use the received data as needed

                    // Update the content dynamically
                    $('#logements-container').html(response.html);
                },
                error: function (error) {
                    console.error('AJAX request failed:', error);
                }
            });
        }

        // Attach the submitForm function to the input event of the search input field
        $('#search-form input').on('input', function () {
            submitForm();
        });
    });
</script>
