
{% if logements is defined and logements|length > 0 %}
    {% for logement in logements %}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="{{ asset('uploads/' ~ logement.image) }}" class="card-img-top img-fluid" alt="Logement Image" style="height: 300px;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ logement.adrl }}</h5>
                    <p class="card-text">Superficie: {{ logement.superfice }}</p>
                    <p class="card-text">Loyer: {{ logement.loyer }}</p>
                    <p class="card-text">Type: {{ logement.type }}</p>
                    <p class="card-text">RÃ©gion: {{ logement.region }}</p>
                    <a href="{{ path('app_logement_client_show', {'idlogement': logement.idlogement}) }}" class="btn btn-primary mt-auto">Show</a>
                </div>
            </div>
        </div>
    {% endfor %}
{% else %}
    <div class="col-12">
        <p>No records found</p>
    </div>
{% endif %}